= form_for(@query) do |f|
  - if @query.errors.any?
    #error_explanation
      %h2
        = pluralize(@query.errors.count, "error")
        prohibited this query from being saved:
      %ul
        - @query.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :query
    %br/
    = f.text_area :query
  .field
    = f.label :result
    %br/
    = f.text_area :result
  .actions
    = f.submit
